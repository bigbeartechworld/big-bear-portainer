{
  "version": "3",
  "templates": [
    {
      "id": 141,
      "type": 2,
      "title": "Penpot",
      "name": "penpot",
      "description": "Designers and developers can finally work in unison to build beautifully designed software experiences that truly scale up.",
      "note": "Bring Design Freedom to your Product Team",
      "categories": ["BigBearCasaOS", "selfhosted"],
      "platform": "linux",
      "logo": "https://cdn.jsdelivr.net/gh/bigbeartechworld/big-bear-casaos/Apps/penpot/logo.jpg",
      "image": "penpotapp/frontend:2.10.0",
      "repository": {
        "url": "https://github.com/bigbeartechworld/big-bear-casaos",
        "stackfile": "Apps/penpot/docker-compose.yml"
      },
      "env": [
    {"name": "PENPOT_FLAGS", "label": "PENPOT_FLAGS", "description": "Environment variable for PENPOT_FLAGS", "default": "enable-registration enable-login-with-password disable-email-verification disable-secure-session-cookies"},
    {"name": "PENPOT_SECRET_KEY", "label": "PENPOT_SECRET_KEY", "description": "Environment variable for PENPOT_SECRET_KEY", "default": "big-bear-penpot-secret-key"},
    {"name": "PENPOT_PUBLIC_URI", "label": "PENPOT_PUBLIC_URI", "description": "Environment variable for PENPOT_PUBLIC_URI", "default": "http://big-bear-penpot-frontend:8080"},
    {"name": "PENPOT_DATABASE_URI", "label": "PENPOT_DATABASE_URI", "description": "Environment variable for PENPOT_DATABASE_URI", "default": "postgresql://big-bear-penpot-postgres/penpot"},
    {"name": "PENPOT_DATABASE_USERNAME", "label": "PENPOT_DATABASE_USERNAME", "description": "Environment variable for PENPOT_DATABASE_USERNAME", "default": "bigbear"},
    {"name": "PENPOT_DATABASE_PASSWORD", "label": "PENPOT_DATABASE_PASSWORD", "description": "Environment variable for PENPOT_DATABASE_PASSWORD", "default": "casaos"},
    {"name": "PENPOT_REDIS_URI", "label": "PENPOT_REDIS_URI", "description": "Environment variable for PENPOT_REDIS_URI", "default": "redis://big-bear-penpot-redis/0"},
    {"name": "PENPOT_ASSETS_STORAGE_BACKEND", "label": "PENPOT_ASSETS_STORAGE_BACKEND", "description": "Environment variable for PENPOT_ASSETS_STORAGE_BACKEND", "default": "assets-fs"},
    {"name": "PENPOT_STORAGE_ASSETS_FS_DIRECTORY", "label": "PENPOT_STORAGE_ASSETS_FS_DIRECTORY", "description": "Environment variable for PENPOT_STORAGE_ASSETS_FS_DIRECTORY", "default": "/opt/data/assets"},
    {"name": "PENPOT_TELEMETRY_ENABLED", "label": "PENPOT_TELEMETRY_ENABLED", "description": "Environment variable for PENPOT_TELEMETRY_ENABLED", "default": "false"},
    {"name": "PENPOT_PUBLIC_URI", "label": "PENPOT_PUBLIC_URI", "description": "Environment variable for PENPOT_PUBLIC_URI", "default": "http://big-bear-penpot-frontend:8080"},
    {"name": "PENPOT_REDIS_URI", "label": "PENPOT_REDIS_URI", "description": "Environment variable for PENPOT_REDIS_URI", "default": "redis://big-bear-penpot-redis/0"},
    {"name": "POSTGRES_INITDB_ARGS", "label": "POSTGRES_INITDB_ARGS", "description": "Environment variable for POSTGRES_INITDB_ARGS", "default": "--data-checksums"},
    {"name": "POSTGRES_DB", "label": "POSTGRES_DB", "description": "Environment variable for POSTGRES_DB", "default": "penpot"},
    {"name": "POSTGRES_USER", "label": "POSTGRES_USER", "description": "Environment variable for POSTGRES_USER", "default": "bigbear"},
    {"name": "POSTGRES_PASSWORD", "label": "POSTGRES_PASSWORD", "description": "Environment variable for POSTGRES_PASSWORD", "default": "casaos"}
      ],
      "ports": [    "9001:8080",    "1080:1080"],
      "volumes": [
    {"container": "/opt/data/assets"},
    {"container": "/opt/data/assets"},
    {"container": "/var/lib/postgresql/data"}
      ],
      "labels": [
        {"name": "maintainer", "value": "BigBearTechWorld"},
        {"name": "version", "value": "2.10.0"},
        {"name": "source", "value": "big-bear-casaos"}
      ],
      "administrator_only": false
    }
  ]
}
