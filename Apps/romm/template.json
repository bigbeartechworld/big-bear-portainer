{
  "version": "3",
  "templates": [
    {
      "id": 171,
      "type": 2,
      "title": "RomM",
      "name": "romm",
      "description": "ROM manager for organizing, enriching, and playing retro games, with support for 400+ platforms.",
      "note": "RomM",
      "categories": ["BigBearCasaOS", "selfhosted"],
      "platform": "linux",
      "logo": "https://cdn.jsdelivr.net/gh/selfhst/icons/png/romm.png",
      "repository": {
        "url": "https://github.com/bigbeartechworld/big-bear-portainer",
        "stackfile": "Apps/romm/docker-compose.yml"
      },
      "env": [
    {"name": "DB_HOST", "label": "DB_HOST", "description": "Environment variable for DB_HOST", "default": "big-bear-rommdb"},
    {"name": "DB_PORT", "label": "DB_PORT", "description": "Environment variable for DB_PORT", "default": "3306"},
    {"name": "DB_USER", "label": "DB_USER", "description": "Environment variable for DB_USER", "default": "romm-user"},
    {"name": "DB_NAME", "label": "DB_NAME", "description": "Environment variable for DB_NAME", "default": "romm"},
    {"name": "DB_PASSWD", "label": "DB_PASSWD", "description": "Environment variable for DB_PASSWD", "default": "casaos"},
    {"name": "ROMM_AUTH_SECRET_KEY", "label": "ROMM_AUTH_SECRET_KEY", "description": "Environment variable for ROMM_AUTH_SECRET_KEY", "default": "<secret key>"},
    {"name": "IGDB_CLIENT_ID", "label": "IGDB_CLIENT_ID", "description": "Environment variable for IGDB_CLIENT_ID", "default": "<igdb client id>"},
    {"name": "IGDB_CLIENT_SECRET", "label": "IGDB_CLIENT_SECRET", "description": "Environment variable for IGDB_CLIENT_SECRET", "default": "<igdb client secret>"},
    {"name": "MOBYGAMES_API_KEY", "label": "MOBYGAMES_API_KEY", "description": "Environment variable for MOBYGAMES_API_KEY", "default": "<moby api key>"},
    {"name": "STEAMGRIDDB_API_KEY", "label": "STEAMGRIDDB_API_KEY", "description": "Environment variable for STEAMGRIDDB_API_KEY", "default": "<sgdb api key>"},
    {"name": "SCREENSCRAPER_USER", "label": "SCREENSCRAPER_USER", "description": "Environment variable for SCREENSCRAPER_USER", "default": "<screenscraper user>"},
    {"name": "SCREENSCRAPER_PASSWORD", "label": "SCREENSCRAPER_PASSWORD", "description": "Environment variable for SCREENSCRAPER_PASSWORD", "default": "<screenscraper password>"},
    {"name": "RETROACHIEVEMENTS_API_KEY", "label": "RETROACHIEVEMENTS_API_KEY", "description": "Environment variable for RETROACHIEVEMENTS_API_KEY", "default": "<retroachievements api key>"},
    {"name": "HASHEOUS_API_ENABLED", "label": "HASHEOUS_API_ENABLED", "description": "Environment variable for HASHEOUS_API_ENABLED", "default": "true"},
    {"name": "ENABLE_RESCAN_ON_FILESYSTEM_CHANGE", "label": "ENABLE_RESCAN_ON_FILESYSTEM_CHANGE", "description": "Environment variable for ENABLE_RESCAN_ON_FILESYSTEM_CHANGE", "default": "true"},
    {"name": "ENABLE_SCHEDULED_RESCAN", "label": "ENABLE_SCHEDULED_RESCAN", "description": "Environment variable for ENABLE_SCHEDULED_RESCAN", "default": "true"},
    {"name": "ENABLE_SCHEDULED_UPDATE_SWITCH_TITLEDB", "label": "ENABLE_SCHEDULED_UPDATE_SWITCH_TITLEDB", "description": "Environment variable for ENABLE_SCHEDULED_UPDATE_SWITCH_TITLEDB", "default": "true"},
    {"name": "MYSQL_ROOT_PASSWORD", "label": "MYSQL_ROOT_PASSWORD", "description": "Environment variable for MYSQL_ROOT_PASSWORD", "default": "casaos"},
    {"name": "MYSQL_DATABASE", "label": "MYSQL_DATABASE", "description": "Environment variable for MYSQL_DATABASE", "default": "romm"},
    {"name": "MYSQL_USER", "label": "MYSQL_USER", "description": "Environment variable for MYSQL_USER", "default": "romm-user"},
    {"name": "MYSQL_PASSWORD", "label": "MYSQL_PASSWORD", "description": "Environment variable for MYSQL_PASSWORD", "default": "casaos"}
      ]
    }
  ]
}
