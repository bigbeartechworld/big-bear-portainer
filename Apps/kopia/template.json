{
  "version": "2",
  "templates": [
    {
      "id": 91,
      "type": 2,
      "title": "Kopia",
      "name": "kopia",
      "description": "Kopia is a fast and secure open-source backup/restore tool that allows you to create encrypted snapshots of your data and save the snapshots to remote or cloud storage of your choice, to network-attached storage or server, or locally on your machine.",
      "note": "Kopia",
      "categories": ["BigBearCasaOS", "selfhosted"],
      "platform": "linux",
      "logo": "https://cdn.jsdelivr.net/gh/selfhst/icons/png/kopia.png",
      "image": "ghcr.io/thespad/kopia-server:v0.17.0-spad3",
      "repository": {
        "url": "https://github.com/bigbeartechworld/big-bear-casaos",
        "stackfile": "Apps/kopia/docker-compose.yml"
      },
      "env": [
    {"name": "PUID", "label": "PUID", "description": "Environment variable for PUID", "default": "0"},
    {"name": "PGID", "label": "PGID", "description": "Environment variable for PGID", "default": "0"},
    {"name": "TZ", "label": "TZ", "description": "Environment variable for TZ", "default": "UTC"},
    {"name": "KOPIA_HTTPS", "label": "KOPIA_HTTPS", "description": "Environment variable for KOPIA_HTTPS", "default": "true"},
    {"name": "KOPIA_UI_USERNAME", "label": "KOPIA_UI_USERNAME", "description": "Environment variable for KOPIA_UI_USERNAME", "default": "casaos"},
    {"name": "KOPIA_UI_PASSWORD", "label": "KOPIA_UI_PASSWORD", "description": "Environment variable for KOPIA_UI_PASSWORD", "default": "casaos"},
    {"name": "KOPIA_PASSWORD", "label": "KOPIA_PASSWORD", "description": "Environment variable for KOPIA_PASSWORD", "default": "casaos"},
    {"name": "REFRESH_INTERVAL", "label": "REFRESH_INTERVAL", "description": "Environment variable for REFRESH_INTERVAL", "default": ""}
      ],
      "ports": [    "51515:51515"],
      "volumes": [
    {"container": "/config"},
    {"container": "/backups/home"},
    {"container": "/repository"},
    {"container": "/tmp"},
    {"container": "/var/run/docker.sock"}
      ],
      "labels": [
        {"name": "maintainer", "value": "BigBearTechWorld"},
        {"name": "version", "value": "v0.17.0-spad3"},
        {"name": "source", "value": "big-bear-casaos"}
      ],
      "administrator_only": false
    }
  ]
}
