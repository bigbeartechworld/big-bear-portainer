{
  "version": "2",
  "templates": [
    {
      "id": 60,
      "type": 2,
      "title": "Gitea Mirror",
      "name": "gitea-mirror",
      "description": "Gitea Mirror is a modern web app for automatically mirroring repositories from GitHub to your self-hosted Gitea instance. It features a user-friendly interface to sync public, private, or starred GitHub repos, mirror entire organizations with structure preservation, and optionally mirror issues and labels. The application includes smart filtering, detailed logs, and scheduled automatic mirroring.",
      "note": "Mirror GitHub repositories to Gitea",
      "categories": ["BigBearCasaOS", "selfhosted"],
      "platform": "linux",
      "logo": "https://cdn.jsdelivr.net/gh/bigbeartechworld/big-bear-casaos/Apps/gitea-mirror/logo-new.png",
      "image": "ghcr.io/raylabshq/gitea-mirror:v3.8.3",
      "repository": {
        "url": "https://github.com/bigbeartechworld/big-bear-casaos",
        "stackfile": "Apps/gitea-mirror/docker-compose.yml"
      },
      "env": [
    {"name": "NODE_ENV", "label": "NODE_ENV", "description": "Environment variable for NODE_ENV", "default": "production"},
    {"name": "DATABASE_URL", "label": "DATABASE_URL", "description": "Environment variable for DATABASE_URL", "default": "file:data/gitea-mirror.db"},
    {"name": "HOST", "label": "HOST", "description": "Environment variable for HOST", "default": "0.0.0.0"},
    {"name": "PORT", "label": "PORT", "description": "Environment variable for PORT", "default": "4321"},
    {"name": "BETTER_AUTH_URL", "label": "BETTER_AUTH_URL", "description": "Environment variable for BETTER_AUTH_URL", "default": "http://0.0.0.0:4321"},
    {"name": "BETTER_AUTH_SECRET", "label": "BETTER_AUTH_SECRET", "description": "Environment variable for BETTER_AUTH_SECRET", "default": "your-secret-key-change-this-in-production"}
      ],
      "ports": [    "4321:4321"],
      "volumes": [
    {"container": "/app/data"}
      ],
      "labels": [
        {"name": "maintainer", "value": "RayLabs HQ"},
        {"name": "version", "value": "3.8.3"},
        {"name": "source", "value": "big-bear-casaos"}
      ],
      "administrator_only": false
    }
  ]
}
